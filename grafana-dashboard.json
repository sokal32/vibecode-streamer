{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" }
  ],
  "title": "Streamer",
  "uid": "streamer-v1",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "templating": {
    "list": [
      {
        "name": "stream",
        "type": "query",
        "label": "Stream",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": {
          "query": "label_values(streamer_requests_total, stream)",
          "refId": "StandardVariableQuery"
        },
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 1,
        "current": {}
      }
    ]
  },
  "panels": [

    { "id": 1, "type": "row", "title": "Overview", "collapsed": false,
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 } },

    {
      "id": 2, "type": "stat", "title": "Cache Size",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 1, "w": 4, "h": 4 },
      "targets": [
        { "expr": "streamer_cache_size", "legendFormat": "entries", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area"
      },
      "fieldConfig": { "defaults": { "unit": "short" } }
    },

    {
      "id": 3, "type": "timeseries", "title": "Total Request Rate by Stream",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 4, "y": 1, "w": 20, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_requests_total{stream=~\"$stream\"}[5m])) by (stream, endpoint)",
          "legendFormat": "{{stream}} / {{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "lineWidth": 2 } } }
    },

    { "id": 10, "type": "row", "title": "Live", "collapsed": false,
      "gridPos": { "x": 0, "y": 9, "w": 24, "h": 1 } },

    {
      "id": 11, "type": "timeseries", "title": "Live — Request Rate by Type & Result",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_requests_total{stream=~\"$stream\", endpoint=\"live\"}[5m])) by (type, result)",
          "legendFormat": "{{type}} / {{result}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 12, "type": "timeseries", "title": "Live — Request Duration (p50 / p95 / p99)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5,  sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"live\"}[5m])) by (le, type))",
          "legendFormat": "p50 {{type}}", "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"live\"}[5m])) by (le, type))",
          "legendFormat": "p95 {{type}}", "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"live\"}[5m])) by (le, type))",
          "legendFormat": "p99 {{type}}", "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "id": 13, "type": "timeseries", "title": "Live — Manifest Requests by Variant",
      "description": "streamer_manifest_requests_total has no stream label — filtered by endpoint only",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_manifest_requests_total{endpoint=\"live\"}[5m])) by (type)",
          "legendFormat": "{{type}}", "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 14, "type": "timeseries", "title": "Live — Error Rate",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_requests_total{stream=~\"$stream\", endpoint=\"live\", result=\"error\"}[5m])) by (stream, type)",
          "legendFormat": "{{stream}} / {{type}}", "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "fixed", "fixedColor": "red" }
        }
      }
    },

    { "id": 20, "type": "row", "title": "VOD", "collapsed": false,
      "gridPos": { "x": 0, "y": 26, "w": 24, "h": 1 } },

    {
      "id": 21, "type": "timeseries", "title": "VOD — Request Rate by Type & Result",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 27, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_requests_total{stream=~\"$stream\", endpoint=\"vod\"}[5m])) by (type, result)",
          "legendFormat": "{{type}} / {{result}}", "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 22, "type": "timeseries", "title": "VOD — Request Duration (p50 / p95 / p99)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 27, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5,  sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"vod\"}[5m])) by (le, type))",
          "legendFormat": "p50 {{type}}", "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"vod\"}[5m])) by (le, type))",
          "legendFormat": "p95 {{type}}", "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(streamer_request_duration_seconds_bucket{stream=~\"$stream\", endpoint=\"vod\"}[5m])) by (le, type))",
          "legendFormat": "p99 {{type}}", "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "id": 23, "type": "timeseries", "title": "VOD — Manifest Requests by Variant",
      "description": "streamer_manifest_requests_total has no stream label — filtered by endpoint only",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 35, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_manifest_requests_total{endpoint=\"vod\"}[5m])) by (type)",
          "legendFormat": "{{type}}", "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 24, "type": "timeseries", "title": "VOD — Error Rate",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 35, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_requests_total{stream=~\"$stream\", endpoint=\"vod\", result=\"error\"}[5m])) by (stream, type)",
          "legendFormat": "{{stream}} / {{type}}", "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "fixed", "fixedColor": "red" }
        }
      }
    },

    { "id": 30, "type": "row", "title": "Upstream & Cache", "collapsed": false,
      "gridPos": { "x": 0, "y": 43, "w": 24, "h": 1 } },

    {
      "id": 31, "type": "timeseries", "title": "Upstream Fetch Rate by Status",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 44, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_upstream_fetches_total{stream=~\"$stream\"}[5m])) by (type, status)",
          "legendFormat": "{{type}} / {{status}}", "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 32, "type": "timeseries", "title": "Upstream Fetch Duration (p50 / p95 / p99)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 44, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5,  sum(rate(streamer_upstream_fetch_duration_seconds_bucket{stream=~\"$stream\"}[5m])) by (le, type))",
          "legendFormat": "p50 {{type}}", "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(streamer_upstream_fetch_duration_seconds_bucket{stream=~\"$stream\"}[5m])) by (le, type))",
          "legendFormat": "p95 {{type}}", "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(streamer_upstream_fetch_duration_seconds_bucket{stream=~\"$stream\"}[5m])) by (le, type))",
          "legendFormat": "p99 {{type}}", "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "id": 33, "type": "timeseries", "title": "Cache Hit Rate",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 52, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_cache_hits_total{stream=~\"$stream\"}[5m])) by (stream, type)",
          "legendFormat": "{{stream}} / {{type}}", "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },

    {
      "id": 34, "type": "gauge", "title": "Cache Hit Ratio",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 52, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(streamer_cache_hits_total{stream=~\"$stream\"}[5m])) / (sum(rate(streamer_cache_hits_total{stream=~\"$stream\"}[5m])) + sum(rate(streamer_upstream_fetches_total{stream=~\"$stream\"}[5m])))",
          "legendFormat": "ratio", "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0, "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red",    "value": null },
              { "color": "yellow", "value": 0.5  },
              { "color": "green",  "value": 0.8  }
            ]
          }
        }
      }
    }

  ]
}
